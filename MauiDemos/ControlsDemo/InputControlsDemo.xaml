<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.InputControlsDemo"
             Title="InputControlsDemo">
    <VerticalStackLayout>
        <CheckBox
            x:Name="checkBox"
            IsChecked="True"
            />
        <Slider
            x:Name="slider"
            Minimum="0"
            Maximum="100"
            Value="50"
            ValueChanged="slider_ValueChanged"
            MinimumTrackColor="Yellow"
            MaximumTrackColor="Green"
            ThumbColor="Red"
            />
        <Label
            x:Name="sliderValueLabel"
            Text="50"
            />
        <Stepper
            x:Name="stepper"
            ValueChanged="stepper_ValueChanged"
            Maximum="10"
            Minimum="2"
            Increment="2" />

        <Label
            x:Name="stepperValueLabel"
            />

        <Switch />

        <DatePicker />
        <TimePicker />


    </VerticalStackLayout>
</ContentPage>